{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@hooks/*": ["hooks/*"],
      "@apis/*": ["apis/*"],
      "@common/*": ["common/*"]
    }
  },
  "include": ["src"]
}
